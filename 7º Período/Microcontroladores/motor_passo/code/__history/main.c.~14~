#include <main.h>

byte steps[] = {
   0b00000001,
   0b00000010,
   0b01000100,
   0b00001000
};

#INT_EXT
void  EXT_isr(void) 
{
 output_toggle(PIN_B0);
}

void main()
{
   port_B_pullups(0xFF);
   int i = 0;
   
   while(TRUE)
   {
      
      
      output_d(steps[i]);
      delay_ms(10);
      
      i--;
      if (i == -1) {
         i = 3;
      }
   }

}
