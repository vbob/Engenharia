#include <16F628A.h>
#include <stdint.h>

#FUSES NOWDT                    //No Watch Dog Timer
#FUSES NOLVP                    //No low voltage prgming, B3(PIC16) or B5(PIC18) used for I/O

#use delay(crystal=20000000)

#define TCLK PIN_B0 
#define TDIO PIN_B1

uint8_t m_brightness = 0;

void setBrightness(uint8_t brightness, int on) {
   m_brightness = (brightness & 0x7) | (on? 0x08 : 0x00);
}

void bitDelay() {
   delay_us(100);
}

void start() {
   output_low(TDIO);
   bitDelay();
}

void stop() {
   output_low(TDIO);
   output_high(TCLK);
   output_high(TDIO);
}

bool TM1637Display::writeByte(uint8_t b)
{
  uint8_t data = b;

  // 8 Data Bits
  for(uint8_t i = 0; i < 8; i++) {
    // CLK low
    output_low(CLK);
    bitDelay();

   // Set data bit
    if (data & 0x01)
      outpt_high(TDIO);
    else
      output_low(TDIO);

    bitDelay();

   // CLK high
    pinMode(m_pinClk, INPUT);
    bitDelay();
    data = data >> 1;
  }

void setSegments(uint8_t segments[], uint8_t length, uint8_t pos) {
   start();
}

void main()
{

   output_low(TCLK);
   output_low(TDIO);
   
   while(TRUE)
   {
      //TODO: User Code
   }

}
