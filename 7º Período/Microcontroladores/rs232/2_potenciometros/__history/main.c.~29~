#include <16F877A.h>
#device ADC=8

#FUSES NOWDT                    //No Watch Dog Timer
#FUSES NOLVP                    //No low voltage prgming, B3(PIC16) or B5(PIC18) used for I/O

#use delay(crystal=16000000)
#use rs232(baud=1200,UART1,stream=PORT1)


void main()
{
   setup_adc_ports(AN0_AN1_AN3);
   setup_adc(ADC_CLOCK_DIV_32);
   
   unsigned int value = 0;
   
   while(TRUE)
   {
      set_adc_channel(0);
      delay_ms(1);
      value=read_adc();
      fprintf(PORT1, "%d A \n\r", value);
      delay_ms(100);
      
      set_adc_channel(1);
      delay_ms(1);
      value=read_adc();
      fprintf(PORT1, "%d B \n\r", value);
      delay_ms(100);
   }
}
